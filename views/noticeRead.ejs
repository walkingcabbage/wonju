<script>
    let con = `<%= row.content %>`;
    con = con.replace(/</gi, '&lt;').replace(/>/gi, '&gt;').replace(/\"/gi, '&quot;').replace(/'/gi, '&quot;').replace(
        /\n/gi, '<br/>');
</script>

<div class="notice-read-wrap">
    <div class="notice-holder">
        <section class="notice-read-top">
            <div class="top-box">
                <span class="notice-category">공지사항</span>
                <h2 class="title"><%= row.title %></h2>
                <span class="sub-info"><%= row.create_time %></span><span class="sub-info">|</span><span class="icon"></span><span class="sub-info"><%= row.views %></span>
            </div>
        </section>
        <section class="notice-read-middle"> 
            <p>
                <script>
                    document.querySelector('.notice-read-middle>p').innerHTML = con
                </script>
            </p>
        </section>
        <section class="notice-read-bottom"> 
            <div class="bottom-box">
                <a href="/noticePage" class="btns">돌아가기</a>
                <a href="/noticeUpdatePage?id=<%= row.id %>" class="btns">수정</a>
                <a onclick="if(confirm('정말로 삭제하시겠습니다?')){
                    location.href='/deletenotice?id=<%= row.id %>'
                    } else{
                    
                    }" class="btns">삭제</a>
            </div>
        </section>
    </div>
</div>